# OurColumbus Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# =============================================================================

# Your Supabase project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=

# Supabase anon/public key (safe for frontend, used for reads)
SUPABASE_ANON_KEY=

# Supabase service role key (KEEP SECRET - used for writes, bypasses RLS)
SUPABASE_SERVICE_KEY=

# =============================================================================
# LOCATION CONFIGURATION
# =============================================================================

# Columbus, OH city center coordinates (zip 43215)
CENTER_LATITUDE=39.9612
CENTER_LONGITUDE=-82.9988

# Search radius in miles
SEARCH_RADIUS_MILES=50

# =============================================================================
# SCRAPER CONFIGURATION
# =============================================================================

# Run browser in headless mode (true for production, false for debugging)
HEADLESS=true

# Scrape interval in minutes
SCRAPE_INTERVAL_MINUTES=15

# Browser data directory for persistent sessions
BROWSER_DATA_DIR=./browser_data

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API server port
API_PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://ourcolumbus.vercel.app
